# Environment Variables for Cloud Deployment 
# Copy to .env file and fill with your values 
 
# Server Configuration 
PORT=9999  # Main server port (Render/GCP will set this automatically) 
ADMIN_PASSWORD=your_secure_admin_password_here 
CUSTOMER_PASSWORD=your_secure_customer_password_here 
 
# Database Configuration 
DB_PATH=/tmp/signals.db  # For cloud environments (Render/GCP) 
# DB_PATH=signals.db     # For local development 
 
# Web Dashboard Configuration 
DASHBOARD_PORT=5000      # Web dashboard port 
DASHBOARD_HOST=0.0.0.0   # Web dashboard host 
 
# Logging Configuration 
LOG_DIR=logs             # Local development 
# LOG_DIR=/tmp/logs      # Cloud environments 
